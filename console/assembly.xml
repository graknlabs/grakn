<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>assembly.core.console</id>

    <fileSets>
        <fileSet>
            <directory>${core.basedir}</directory>
            <includes>
                <include>grakn-core</include>
                <include>grakn-core.bat</include>
            </includes>
            <outputDirectory>${file.separator}</outputDirectory>
        </fileSet>

        <!-- changelog license readme -->

        <fileSet>
            <directory>${core.basedir}</directory>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
            </includes>
            <outputDirectory>${file.separator}</outputDirectory>
        </fileSet>

        <!-- logback.xml -->

        <fileSet>
            <directory>${core.console.basedir}/conf</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>*:*:jar:*</include>
            </includes>
            <outputDirectory>services/lib</outputDirectory>
        </dependencySet>
    </dependencySets>

</assembly>
