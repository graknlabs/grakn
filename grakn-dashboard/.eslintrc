{
    "extends": "airbnb-base",
    "plugins": [
        "import",
        "html",
        "flowtype"
    ],
    "globals": {
        "window": true,
        "localStorage": true,
        "$": true,
        "visualiser": true,
        "vis": true,
        "XMLHttpRequest": true,
        "document": true,
        "toastr": true
    },
    "rules": {
        "flowtype/define-flow-type": 1,
        "flowtype/use-flow-type": 1,
        "no-plusplus": [
            1,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "max-len": [
            2,
            180
        ],
        "no-unused-vars": [
            2,
            {
                "args": "none"
            }
        ]
    }
}
