<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/component/1.1.2 http://maven.apache.org/xsd/component-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <outputDirectory>${file.separator}</outputDirectory>
            <directory>${basedir}/src</directory>
            <includes>
                <include>grakn</include>
                <include>graql</include>
            </includes>
        </fileSet>
        <!-- changelog license readme -->
        <fileSet>
            <outputDirectory>${file.separator}</outputDirectory>
            <directory>${main.basedir}</directory>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>services</outputDirectory>
            <directory>${basedir}/src/services/</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>examples</outputDirectory>
            <directory>${basedir}/src/examples/</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>

        <!-- grakn.properties -->
        <fileSet>
            <outputDirectory>conf</outputDirectory>
            <directory>${main.basedir}/conf/main</directory>
            <includes>
                <include>grakn.properties</include>
            </includes>
        </fileSet>
        <!-- and logback.xml (server and client configs) -->
        <fileSet>
            <outputDirectory>services/grakn/server</outputDirectory>
            <directory>${main.basedir}/conf/main/server</directory>
            <includes>
                <include>logback.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>services/grakn/client</outputDirectory>
            <directory>${main.basedir}/conf/main/client</directory>
            <includes>
                <include>logback.xml</include>
            </includes>
        </fileSet>
        <!-- static assets for dashboard -->
        <fileSet>
            <outputDirectory>services/assets</outputDirectory>
            <directory>${main.basedir}/grakn-dashboard/static</directory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>db/cassandra/data</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>db/cassandra/commitlog</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>db/cassandra/saved_caches</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>db/redis</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <!-- Redis Package -->
        <fileSet>
            <outputDirectory>services/redis</outputDirectory>
            <directory>${basedir}/target/redis-prebuilt-redis-3.2.9</directory>
            <excludes>
                <exclude>README.md</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>services/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>*:*:jar:*</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>
