<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

    <id>assembly.core.server</id>

    <fileSets>
        <fileSet>
            <directory>${core.basedir}</directory>
            <includes>
                <include>grakn-core</include>
                <include>grakn-core.bat</include>
            </includes>
            <outputDirectory>${file.separator}</outputDirectory>
        </fileSet>

        <!-- changelog license readme -->

        <fileSet>
            <directory>${core.basedir}</directory>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
            </includes>
            <outputDirectory>${file.separator}</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${core.server.basedir}/src/services/</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>services</outputDirectory>
        </fileSet>

        <!-- grakn.properties and logback.xml -->

        <fileSet>
            <directory>${core.server.basedir}/conf</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>

        <!-- static assets for dashboard -->

        <fileSet>
            <directory>${core.dashboard.basedir}/static</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>services/assets</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <outputDirectory>logs</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <outputDirectory>db/cassandra/data</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <outputDirectory>db/cassandra/commitlog</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
            <outputDirectory>db/cassandra/saved_caches</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>*:*:jar:*</include>
            </includes>
            <outputDirectory>services/lib</outputDirectory>
        </dependencySet>
    </dependencySets>

</assembly>
